<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10"
    tools:context=".StartRoundActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Start point:"
            android:textSize="20sp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textview.startpoint_word"
            android:layout_width="0"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="some word"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="End point:"
            android:textSize="20sp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textview.endpoint_word"
            android:layout_width="0"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="some word"
            android:textSize="20sp" />
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button.start_round"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30"
        android:backgroundTint="@color/seed"
        android:text="Start" />

</LinearLayout>